{
  "name": "airtable-kit",
  "version": "0.0.3",
  "description": "A better ts/js airtable toolkit",
  "license": "MIT",
  "author": "Nick Crews",
  "repository": {
    "type": "git",
    "url": "https://github.com/NickCrews/airtable-kit"
  },
  "type": "module",
  "engines": {
    "node": ">=20"
  },
  "main": "./dist/index.cjs",
  "types": "./dist/index.d.cts",
  "bin": "./dist/cli.cjs",
  "exports": {
    ".": {
      "types": "./dist/index.d.cts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./client": {
      "types": "./dist/client/index.d.cts",
      "import": "./dist/client/index.js",
      "require": "./dist/client/index.cjs"
    },
    "./codegen": {
      "types": "./dist/codegen/index.d.cts",
      "import": "./dist/codegen/index.js",
      "require": "./dist/codegen/index.cjs"
    },
    "./mcp": {
      "types": "./dist/mcp/index.d.cts",
      "import": "./dist/mcp/index.js",
      "require": "./dist/mcp/index.cjs"
    },
    "./schema": {
      "types": "./dist/schema/index.d.cts",
      "import": "./dist/schema/index.js",
      "require": "./dist/schema/index.cjs"
    }
  },
  "scripts": {
    "build2": "tsc && cp README.md dist/README.md && cp LICENSE dist/LICENSE",
    "build": "zshy && cp README.md dist/README.md && cp LICENSE dist/LICENSE",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest watch"
  },
  "peerDependencies": {
    "zod": "^4"
  },
  "peerDependenciesMeta": {
    "zod": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/node": "^22.10.5",
    "typescript": "^5.7.2",
    "vitest": "~2.1.9",
    "zod": "^4",
    "zshy": "^0.4.4"
  },
  "zshy": {
    "bin": "./src/cli.ts",
    "exports": {
      ".": "./src/index.ts",
      "./client": "./src/client/index.ts",
      "./codegen": "./src/codegen/index.ts",
      "./mcp": "./src/mcp/index.ts",
      "./schema": "./src/schema/index.ts"
    }
  },
  "files": [
    "dist"
  ],
  "module": "./dist/index.js"
}
